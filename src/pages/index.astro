---
import { ButtonBgShine } from "../components/ButtonBgShine";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Orbitas.">
	<main class="min-h-screen">
		<!-- Hero Section -->
		<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
			<div class="max-w-3xl">
				<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
					Welcome to Orbitas.
				</h1>
				<p class="text-lg sm:text-xl mb-8 max-w-2xl">
					Connect with fellow innovators, developers, and creators.
					Share your ideas and find the perfect team for your next big
					project.
				</p>
				<div class="flex flex-wrap gap-4">
					<button class="px-6 sm:px-8 py-3 rounded-lg font-semibold"
						>Get Started</button
					>
					<button class="px-6 sm:px-8 py-3 rounded-lg font-semibold"
						>Learn More</button
					>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
			<h2 class="text-3xl sm:text-4xl font-bold mb-12 text-center">
				Why Orbitas?
			</h2>
			<div
				class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto"
			>
				<div class="p-6 rounded-lg">
					<h3 class="text-xl font-semibold mb-4">
						Connect & Collaborate
					</h3>
					<p class="text-base sm:text-lg">
						Find like-minded individuals who share your passion for
						innovation and creation.
					</p>
				</div>
				<div class="p-6 rounded-lg">
					<h3 class="text-xl font-semibold mb-4">
						Share Your Vision
					</h3>
					<p class="text-base sm:text-lg">
						Post your project ideas and attract talented
						collaborators from around the world.
					</p>
				</div>
				<div class="p-6 rounded-lg">
					<h3 class="text-xl font-semibold mb-4">
						Open Source First
					</h3>
					<p class="text-base sm:text-lg">
						Built by the community, for the community. Open source
						at its core.
					</p>
				</div>
			</div>
		</section>

		<!-- How It Works Section -->
		<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
			<h2 class="text-3xl sm:text-4xl font-bold mb-12 text-center">
				How It Works
			</h2>
			<div
				class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto"
			>
				<div class="space-y-6">
					<h3 class="text-xl sm:text-2xl font-semibold mb-4">
						For Project Creators
					</h3>
					<ul class="space-y-4">
						<li class="flex gap-4 text-lg">
							1. Post your project idea
						</li>
						<li class="flex gap-4 text-lg">
							2. Describe your needs
						</li>
						<li class="flex gap-4 text-lg">
							3. Connect with collaborators
						</li>
					</ul>
				</div>
				<div class="space-y-6">
					<h3 class="text-xl sm:text-2xl font-semibold mb-4">
						For Contributors
					</h3>
					<ul class="space-y-4">
						<li class="flex gap-4 text-lg">
							1. Browse exciting projects
						</li>
						<li class="flex gap-4 text-lg">
							2. Filter by your interests
						</li>
						<li class="flex gap-4 text-lg">
							3. Join project teams
						</li>
					</ul>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section
			class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 border-t border-neutral-900"
		>
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl sm:text-4xl font-bold mb-6">
					Ready to Start?
				</h2>
				<p class="text-lg sm:text-xl mb-8">
					Join our growing community of innovators and creators.
				</p>
				<ButtonBgShine text="Join Now" />
			</div>
		</section>

		<!-- Footer -->
		<footer class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<div
				class="flex flex-col sm:flex-row justify-between items-center gap-4"
			>
				<p class="text-base sm:text-lg">
					¬© 2024 Orbitas. All rights reserved.
				</p>
				<div class="flex gap-6">
					<a href="#" class="text-base sm:text-lg hover:underline"
						>About</a
					>
					<a href="#" class="text-base sm:text-lg hover:underline"
						>Contact</a
					>
					<a href="#" class="text-base sm:text-lg hover:underline"
						>Privacy</a
					>
				</div>
			</div>
		</footer>
	</main>
</Layout>

